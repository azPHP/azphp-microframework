{
    "name": "azphp/microframework-demo",
    "description": "Development example of building a micro-framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon",
            "email": "baohx2000@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "AZMicro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AZMicroTest\\": "tests/",
            "AZMicroAssets\\": "testassets/"
        }
    },
    "require": {
        "rdlowrey/auryn": "^1.4",
        "relay/relay": "~2.0",
        "nikic/fast-route": "^1.3",
        "middlewares/request-handler": "^2.0",
        "middlewares/fast-route": "^2.0",
        "laminas/laminas-diactoros": "^2.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9.0",
        "psr/log": "^1.1",
        "monolog/monolog": "^2.0",
        "sempro/phpunit-pretty-print": "dev-for-phpunit-9",
        "middlewares/error-handler": "^3.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/baohx2000/phpunit-pretty-print"
        }
    ]
}
